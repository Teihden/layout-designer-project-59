//- includes/profile.pug
section.tab-pane.h-100.fade#profile(role='tabpanel', aria-labelledby='profile-tab', tabindex='0')
  .d-grid.h-100
    header
      h1.h2.mb-3 Профиль

      //- includes/search-panel.pug
      include ./search-panel.pug

    .profile.hide-scrollbar 
      .card.align-items-center.text-center.py-4.mb-5.border-0    
        .card-body
          img.rounded-circle.mb-2(src='images/avatar_1.jpg', alt='avatar_1', width='90')
          h2.fs-6.fw-bold.lh-base.card-title.mb-4 Кодовёнок Хекслетович
          p.card-text.text-muted Милый и скромный помощник начинающих разработчиков. Люблю JavaScript  
      ul.list-group.list-group-flush.mx-3
        li.list-group-item.d-flex.justify-content-between.align-items-center
          .me-auto
            p.m-0.small.text-muted Страна
            p.m-0.small Москва, Россия
          i.bi.bi-globe.text-black-50(aria-label='globe-icon')
        li.list-group-item.d-flex.justify-content-between.align-items-center
          .me-auto
            p.m-0.small.text-muted Телефон
            p.m-0.small +7 (499) 123-45-67
          i.bi.bi-telephone.text-black-50(aria-label='telephone-icon')
        li.list-group-item.d-flex.justify-content-between.align-items-center
          .me-auto
            p.m-0.small.text-muted Email
            p.m-0.small nikita.m@hexlet.io
          i.bi.bi-envelope.text-black-50(aria-label='envelope-icon')
        li.list-group-item.d-flex.justify-content-between.align-items-center
          .me-auto
            p.m-0.small.text-muted Twitter
            p.m-0.small @n_mikhaylov
          i.bi.bi-people.text-black-50(aria-label='people-icon')

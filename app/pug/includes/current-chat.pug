//- includes/current-chat.pug
header.d-flex.align-items-center.border-bottom.me-md-4
  h2.visually-hidden Чат
  img.ms-3.me-4.rounded-circle(src= messages.partner1.avatar alt= messages.partner1.avatar.slice(7, 15) width="50" height="50")
  .py-4
    p.fw-bold.text-900.mb-0= messages.partner1.name
    p.small.mb-0 Онлайн

.d-flex.flex-column.gap-3.ps-5.pe-5.pt-5.mb-auto.hide-scrollbar
  each message in messages
    .message-balloon.d-flex(class= message.layout)
      img.d-none.d-md-block.rounded-circle.mt-auto.me-3(src= message.avatar alt= message.avatar.slice(7, 15) width="50" height="50")
      .p-4.shadow-sm.rounded-4(class= message.background)
        if message.name !== null
          p.fw-bold.text-dark.mb-1= message.name
        p.mb-2(class= message.color)= message.text
        p.opacity-60.small.border-top.pt-1.mb-0(class= message.color)= message.time

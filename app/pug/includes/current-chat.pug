//- includes/current-chat.pug
header.me-4.pos
  h2.visually-hidden Чат
  .card.chat.shadow-none.border-theme-gray.border-top-0.border-start-0.border-end-0
    .row.m-0
      .col-auto.ps-3.d-flex.align-items-center
        img.rounded-circle(src= messages.partner1.avatar, alt= messages.partner1.avatar.slice(7, 15), width='50')
      .col.py-4
        .card-body.p-0
          .card-title.fw-bold.m-0= messages.partner1.name
          .text-secondary.small.m-0 Онлайн

.message-list.ps-5.pe-5.pt-5.d-flex.flex-column.gap-3.hide-scrollbar
  each message in messages
    .card.border-0(class= message.layout)
      .row.m-0.gap-3
        .col-auto.p-0.d-none.d-md-flex
          img.rounded-circle.mt-auto(src= message.avatar, alt= message.avatar.slice(7, 15), width='50')
        .col.message-balloon.p-4.shadow-sm.rounded-4(class= message.background)
          .card-body.p-0.d-flex.flex-column.gap-1.mb-2
            if message.name !== null
              .card-title.fw-bold.text-dark.m-0= message.name
            p.card-text(class= message.color)= message.text
          .opacity-60.small.border-theme-gray.border-top.pt-1.m-0(class= message.color)= message.time

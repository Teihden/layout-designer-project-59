section.tab-pane.fade#chats(role='tabpanel', aria-labelledby='chats-tab', tabindex='0')
  h1.h2.mb-3 Чаты
  //- includes/search-panel.pug
  include ./search-panel.pug
  .chat-list.mt-5
    each chat in chats    
      .card.chat.shadow-sm.border-0.mb-5
        a.text-decoration-none(href='#')
          .row.m-0.flex-nowrap
            .col-auto.ps-3.d-flex.align-items-center
              img.rounded-circle(src=chat.avatar, alt=chat.avatar.slice(9), width='50')
            .col.pe-4.overflow-hidden
              .card-body.py-4.ps-0
                .d-flex.justify-content-between
                  h3.card-title.h6.fw-bold.m-0= chat.name
                  p.text-secondary.small.m-0= chat.time
                p.text-secondary.small.text-truncate.m-0= chat.message

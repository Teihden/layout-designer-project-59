header
  h2.fw-bold.mb-4 Чаты
  +search-panel('Поиск по сообщениям')
.chat-list.hide-scrollbar
  each chat in chats
    .card.shadow-sm.border-0.mb-3
      a.text-decoration-none(href= chat.link)
        .row.m-0.flex-nowrap
          .col-auto.ps-3.d-flex.align-items-center
            img.rounded-circle(src= chat.avatar, alt= chat.avatar.slice(7, 15), width='50')
          .col.pe-4.overflow-hidden
            .card-body.py-4.ps-0
              .d-flex.justify-content-between
                .card-title.fw-bold.text-900.m-0= chat.name
                .text-secondary.small= chat.time
              p.text-secondary.small.text-truncate.m-0= chat.message

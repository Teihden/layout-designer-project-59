//- chat.pug
-
  const url = "chat"

  const active = {
    contacts: null,
    chats: ["show active"]
  }

//- Подключение mixins
include ../includes/mixins.pug

//- Подключение data
include ../data/contacts-data.pug
include ../data/chats-data.pug
include ../data/messages-data.pug

doctype html
html.h-100(lang="ru")

  //- Подключение head
  include ../includes/head.pug

  body.h-100.p-md-4
    .container-xxxl.rounded-md-4.bg-white.h-100.overflow-hidden
      .row.h-100
        .col-sm-12.col-md-7.col-lg-6.col-xl-5.col-xxl-4.p-0.d-flex.flex-column.justify-content-between.justify-content-md-start.border-end.h-100

          //- Подключение page-header
          include ../includes/page-header.pug

          .tab-content.h-100.hide-scrollbar

            section.tab-pane.fade.pt-5.px-4#contacts(class= active.contacts role="tabpanel" aria-labelledby="contacts-tab" tabindex="0")

              //- Подключение contacts
              include ../includes/contacts.pug

            section.tab-pane.fade.pt-5.px-4#chats(class= active.chats role="tabpanel" aria-labelledby="chats-tab" tabindex="0")

              //- Подключение chats
              include ../includes/chats.pug

            section.tab-pane.fade.pt-5.px-4#profile(role="tabpanel" aria-labelledby="profile-tab" tabindex="0")

              //- Подключение profile
              include ../includes/profile.pug

            section.tab-pane.fade.d-md-none.h-100#current-chat(role="tabpanel" aria-labelledby="current-chat-tab" tabindex="0")
              .d-flex.flex-column.h-100

                //- Подключение current-chat
                include ../includes/current-chat.pug
                +message-input("message-submit-1")

        main.col.d-none.d-md-flex.flex-column.h-100.p-0

          //- Подключение current-chat
          include ../includes/current-chat.pug
          +message-input("message-submit-2")

    script(src="js/bootstrap.min.js")
